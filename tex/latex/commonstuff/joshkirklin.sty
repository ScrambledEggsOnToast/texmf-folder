% Various symbols
\newcommand{\trans}{} % Transpose
\makeatletter
\def\trans#1{%
    \@ifnextchar^%
    {\@trans{#1}}
    {\@trans{#1}^{}}%
}
\def\@trans#1^#2{%
    #1^{\intercal #2}%
}
\makeatother
\newcommand{\herm}{} % Hermitian conjugate
\makeatletter
\def\herm#1{%
    \@ifnextchar^%
    {\@herm{#1}}
    {\@herm{#1}^{}}%
}
\def\@herm#1^#2{%
    #1^{\dagger #2}%
}
\makeatother
